<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bruno.onlinecoach">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/dumbbell"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dumbbell"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Student.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Common.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Common.SignUpActivity" />
        <activity
            android:name=".Coach.CoachActivity"
            android:label="@string/title_activity_coach"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
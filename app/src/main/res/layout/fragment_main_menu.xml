<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".Student.MainMenuFragment">

        <LinearLayout
            android:id="@+id/grid_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/option1"
                android:text="Option1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/weight_scale"
                android:background="@android:color/transparent"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/txt_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="100.00 Kg"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/grid_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/option2"
                android:text="Option2"
                android:src="@drawable/document"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="Training"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/grid_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/option3"
                android:text="Option3"
                android:src="@drawable/heart"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="Your Health"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/grid_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/option4"
                android:text="Option4"
                android:src="@drawable/message"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="Announcements"/>

        </LinearLayout>

    </GridLayout>
</android.support.constraint.ConstraintLayout>

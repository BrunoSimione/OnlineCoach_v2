<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.ProfileFragment"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:layout_marginVertical="20dp"
        android:src="@drawable/body"/>

    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_name"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_coach_name"
        android:textAlignment="center"
        android:textSize="18sp"
        android:hint="Coach Name"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Age"/>
    <EditText
        android:id="@+id/et_age_input"
        android:hint="Age"
        android:inputType="number"
        android:layout_marginHorizontal="10dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Weight Goal"/>
    <EditText
        android:id="@+id/et_weight"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:layout_marginHorizontal="10dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Weight Goal"/>
    <EditText
        android:id="@+id/et_weight_goal"
        android:hint="Weight Goal"
        android:inputType="numberDecimal"
        android:layout_marginHorizontal="10dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_update_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_gravity="center"
        android:text="Update"/>

</LinearLayout>